{
  "name": "@fhevm/node",
  "version": "1.0.0",
  "description": "Node.js utilities for FHEVM - Universal FHEVM SDK",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "fhevm-cli": "dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./cli": {
      "types": "./dist/cli.d.ts",
      "default": "./dist/cli.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "watch": "tsc -p tsconfig.json --watch",
    "clean": "rm -rf dist",
    "test": "vitest run --coverage",
    "test:watch": "vitest",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "fhevm",
    "fhe",
    "confidential",
    "encryption",
    "blockchain",
    "ethereum",
    "nodejs",
    "cli"
  ],
  "author": "elegant",
  "license": "BSD-3-Clause-Clear",
  "dependencies": {
    "@fhevm/core": "workspace:*",
    "@zama-fhe/relayer-sdk": "^0.2.0",
    "commander": "^12.0.0",
    "chalk": "^5.3.0",
    "ora": "^8.0.0",
    "inquirer": "^9.2.0",
    "ethers": "^6.13.4",
    "dotenv": "^16.3.0"
  },
  "devDependencies": {
    "@types/node": "~18.19.50",
    "@types/inquirer": "^9.0.0",
    "@vitest/coverage-v8": "2.1.9",
    "typescript": "~5.8.2",
    "vitest": "~2.1.8"
  }
}
