{
  "name": "fhevm-node-example",
  "version": "1.0.0",
  "description": "Node.js demo package - Contract interactions and server for Universal FHEVM SDK",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "fhevm-node": "dist/node-cli/index.js"
  },
  "scripts": {
    "dev": "tsx src/node-cli/index.ts dev",
    "build": "tsc",
    "start": "tsx src/node-cli/index.ts server",
    "cli": "tsx src/node-cli/index.ts",
    "server": "tsx src/node-cli/index.ts server",
    "counter": "tsx src/node-cli/index.ts counter",
    "bank": "tsx src/node-cli/index.ts bank",
    "voting": "tsx src/node-cli/index.ts voting",
    "demo:counter": "node src/server-side/counter.js",
    "demo:bank": "node src/server-side/bank.js",
    "demo:voting": "node src/server-side/voting.js",
    "demo:all": "node src/server-side/counter.js && node src/server-side/bank.js && node src/server-side/voting.js",
    "wizard": "node src/fhevm-wizard.js",
    "fhevm:wizard": "node src/fhevm-wizard.js",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@fhevm/sdk": "workspace:*",
    "@zama-fhe/relayer-sdk": "^0.2.0",
    "commander": "^11.0.0",
    "express": "^4.18.0",
    "cors": "^2.8.5",
    "ethers": "^6.13.4",
    "dotenv": "^16.3.0",
    "chalk": "^5.3.0",
    "ora": "^8.0.0",
    "inquirer": "^9.2.0",
    "chokidar": "^3.5.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/express": "^4.17.0",
    "@types/cors": "^2.8.0",
    "@types/inquirer": "^9.0.0",
    "typescript": "^5.0.0",
    "tsx": "^4.0.0",
    "jest": "^29.0.0",
    "@types/jest": "^29.0.0",
    "eslint": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0"
  },
  "keywords": [
    "fhevm",
    "nodejs",
    "cli",
    "server",
    "confidential-computing",
    "blockchain"
  ],
  "author": "Universal FHEVM SDK Team",
