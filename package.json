{
  "name": "root",
  "version": "0.4.0",
  "private": true,
  "license": "BSD-3-Clause-Clear",
  "engines": {
    "node": ">=20.0.0"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "install:all": "bash scripts/install.sh",
    "setup": "bash scripts/setup.sh",
    "build:all": "bash scripts/build.sh",
    "test:all": "bash scripts/test.sh",
    "test:cross-framework": "bash scripts/test-cross-framework.sh",
    "deploy:all": "bash scripts/deploy.sh",
    "chain": "pnpm hardhat:chain",
    "compile": "pnpm hardhat:compile",
    "deploy:localhost": "pnpm hardhat:deploy && pnpm generate",
    "deploy:sepolia": "pnpm hardhat:deploy:sepolia && pnpm generate",
    "fork": "pnpm hardhat:fork",
    "format": "pnpm next:format && pnpm hardhat:format",
    "sdk:build": "pnpm --filter ./packages/fhevm-sdk build",
    "sdk:watch": "pnpm --filter ./packages/fhevm-sdk watch",
    "sdk:test": "pnpm --filter ./packages/fhevm-sdk test",
    "sdk:test:watch": "pnpm --filter ./packages/fhevm-sdk test:watch",
    "sdk:clean": "pnpm --filter ./packages/fhevm-sdk clean",
    "demo:counter": "pnpm --filter ./packages/node-example run counter",
    "demo:bank": "pnpm --filter ./packages/node-example run bank",
    "demo:voting": "pnpm --filter ./packages/node-example run voting",
    "demo:all": "pnpm --filter ./packages/node-example run demo:all",
    "wizard": "pnpm --filter ./packages/node-example run wizard",
    "fhevm:wizard": "pnpm --filter ./packages/node-example run fhevm:wizard",
    "fhevm-cli": "node packages/fhevm-sdk/dist/node/src/cli.js",
    "fhevm-cli:init": "node packages/fhevm-sdk/dist/node/src/cli.js init",
    "fhevm-cli:encrypt": "node packages/fhevm-sdk/dist/node/src/cli.js encrypt",
    "fhevm-cli:decrypt": "node packages/fhevm-sdk/dist/node/src/cli.js decrypt",
    "fhevm-cli:batch-encrypt": "node packages/fhevm-sdk/dist/node/src/cli.js batch-encrypt",
    "fhevm-cli:batch-decrypt": "node packages/fhevm-sdk/dist/node/src/cli.js batch-decrypt",
    "fhevm-cli:user-decrypt": "node packages/fhevm-sdk/dist/node/src/cli.js user-decrypt",
    "fhevm-cli:public-decrypt": "node packages/fhevm-sdk/dist/node/src/cli.js public-decrypt",
    "fhevm-cli:status": "node packages/fhevm-sdk/dist/node/src/cli.js status",
    "fhevm-cli:test": "node packages/fhevm-sdk/dist/node/src/cli.js test",
    "fhevm-cli:info": "node packages/fhevm-sdk/dist/node/src/cli.js info",
    "next:dev": "pnpm --filter ./packages/nextjs-example dev",
    "next:build": "pnpm --filter ./packages/nextjs-example build",
    "next:start": "pnpm --filter ./packages/nextjs-example start",
    "vue:dev": "pnpm --filter ./packages/vue-example dev",
    "vue:build": "pnpm --filter ./packages/vue-example build",
    "vue:build:skip-typecheck": "VITE_IGNORE_BUILD_ERROR=true pnpm --filter ./packages/vue-example build",
    "vue:preview": "pnpm --filter ./packages/vue-example preview",
    "clean:all": "pnpm sdk:clean",
    "quickstart": "pnpm fhevm-cli:init",
    "dev": "pnpm next:dev",
    "start": "pnpm next:start",
    "examples": "echo 'üöÄ FHEVM SDK Examples:\\n\\nüì± Frontend Examples:\\n  pnpm next:dev        - Next.js example\\n  pnpm vue:dev         - Vue example\\n\\nüßô‚Äç‚ôÇÔ∏è Interactive Experience:\\n  pnpm fhevm:wizard    - üßô‚Äç‚ôÇÔ∏è Interactive FHEVM Wizard\\n\\nüìä Demo Operations:\\n  pnpm demo:counter    - Counter operations\\n  pnpm demo:bank       - Bank operations\\n  pnpm demo:voting     - Voting operations\\n  pnpm demo:all        - Run all demos\\n\\n\\nüîß CLI Tools:\\n  pnpm fhevm-cli:init  - Universal CLI setup\\n  pnpm fhevm-cli:encrypt - Encrypt values\\n  pnpm fhevm-cli:decrypt - Decrypt handles\\n  pnpm fhevm-cli:status - Check status\\n  pnpm fhevm-cli:test - Test operations\\n  pnpm test:cross-framework - Test cross-framework compatibility'",
    "generate": "ts-node ./scripts/generateTsAbis.ts",
    "hardhat:chain": "pnpm --filter ./packages/hardhat chain",
    "hardhat:check-types": "pnpm --filter ./packages/hardhat check-types",
    "hardhat:clean": "pnpm --filter ./packages/hardhat clean",
    "hardhat:compile": "pnpm --filter ./packages/hardhat compile",
    "hardhat:deploy": "pnpm --filter ./packages/hardhat deploy:localhost",
    "hardhat:deploy:sepolia": "pnpm --filter ./packages/hardhat deploy:sepolia",
    "hardhat:deploy:voting": "pnpm --filter ./packages/hardhat deploy --tags FHEVoting --network sepolia",
    "hardhat:deploy:counter": "pnpm --filter ./packages/hardhat deploy --tags FHECounter --network sepolia",
    "hardhat:deploy:bank": "pnpm --filter ./packages/hardhat deploy --tags FHEBank --network sepolia",
    "hardhat:format": "pnpm --filter ./packages/hardhat prettier:write",
    "hardhat:generate": "pnpm --filter ./packages/hardhat typechain",
    "hardhat:hardhat-verify": "pnpm --filter ./packages/hardhat verify",
    "hardhat:lint": "pnpm --filter ./packages/hardhat lint",
    "hardhat:lint-staged": "pnpm --filter ./packages/hardhat lint",
    "hardhat:test": "pnpm --filter ./packages/hardhat test",
    "hardhat:verify": "pnpm --filter ./packages/hardhat verify",
    "hardhat:verify:sepolia": "pnpm --filter ./packages/hardhat verify:sepolia",
    "hardhat:verify:counter": "pnpm --filter ./packages/hardhat verify:counter",
    "hardhat:verify:voting": "pnpm --filter ./packages/hardhat verify:voting",
    "hardhat:verify:bank": "pnpm --filter ./packages/hardhat verify:bank",
    "lint": "pnpm next:lint && pnpm hardhat:lint",
    "next:check-types": "pnpm --filter ./packages/nextjs-example check-types",
    "next:format": "pnpm --filter ./packages/nextjs-example format",
    "next:lint": "pnpm --filter ./packages/nextjs-example lint",
    "next:serve": "pnpm --filter ./packages/nextjs-example serve",
    "precommit": "lint-staged",
    "preinstall": "pnpm sdk:build",
    "test": "pnpm hardhat:test",
    "vercel": "pnpm --filter ./packages/nextjs-example vercel",
    "vercel:login": "pnpm --filter ./packages/nextjs-example vercel:login",
    "vercel:yolo": "pnpm --filter ./packages/nextjs-example vercel:yolo",
    "verify": "pnpm hardhat:verify",
    "verify:sepolia": "pnpm hardhat:verify:sepolia"
  },
  "dependencies": {
    "hardhat-deploy": "^0.11.45"
  },
  "devDependencies": {
    "@types/node": "^22.7.5",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "bufferutil",
      "esbuild",
      "keccak",
      "protobufjs",
      "secp256k1",
      "sharp",
      "unrs-resolver",
      "utf-8-validate",
      "yarn"
    ],
    "ignoredBuiltDependencies": [
      "@reown/appkit",
      "vue-demi"
    ],
    "peerDependencyRules": {
      "allowedVersions": {
        "react": "19"
      }
    }
  }
}
